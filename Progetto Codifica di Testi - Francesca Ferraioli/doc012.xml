				<ab type="paragrafo" n="1" xml:id="doc012_Header">
					<lb n="1" facs="#doc012_Header.top_left00" />
					Ministero dell'Interno
					<lb n="2" facs="#doc012_Header.top_left01" />
					Divisione___________ Sez___________
					<lb n="3" facs="#doc012_Header.top_left02" />
					Prot N. 448/116 <unclear reason="illegible">3</unclear>17 Allegati___________
					<lb n="4" facs="#doc012_Header.top_left03" />
					Risposta al_________________________
					<lb n="5" facs="#doc012_Header.top_left04" />
					del <date when="19401123">23.11</date>.<unclear reason="illegible">u.o.</unclear>
					<lb n="6" facs="#doc012_Header.top_left05" />
					N. di prot. 09831
					<!-- i numeri intermedi sono stati eliminati -->
					<lb n="10" facs="#doc012_Header.top_right" />
					Mod. 880
					<lb n="11" facs="#doc012_Header.left_side" />
					ISTITUTO POLIGRAFICO DELLO STATO
				</ab>
				<ab type="paragrafo" n="2" xml:id="doc012_Stamp">
					<lb n="12" facs="#doc012_Stamp.main" />
					<lb n="13" />(timbro) 
					<unclear>COPIATO</unclear>
					<lb n="14" />
					<date when="19410106">6 GEN. 1941</date> <num value="19">XIX</num>
				</ab>
				<ab type="paragrafo" n="3" xml:id="doc012_Subject">
					<lb n="15" facs="#doc012_Subject.01" />
					OGGETTO
					<lb n="16" facs="#doc012_Subject.02" />
					<persName><surname>Heger</surname> <forename>Isak</forename></persName> di
					<lb n="17" facs="#doc012_Subject.03" />
					<persName><forename>Giuseppe</forename></persName><pc type="comma">,</pc> ebreo polacco<pc type="comma">,</pc> 
					<lb n="18" facs="#doc012_Subject.04" />
					internato a <name type="place">Campagna</name>
					<lb n="19" facs="#doc012_Subject.hand_sign" />
					<unclear>Alw</unclear>
				</ab>
				<ab type="paragrafo" n="4" xml:id="doc012_Dest">
					<lb n="20" facs="#doc012_Dest.01" />
					<lb n="21" />
					Al Prefetto <supplied>di</supplied> <name type="place">Salerno</name>
					<lb n="22" />
					<unclear reason="illegible">Al</unclear>
					Prefetto <supplied>di</supplied>  <name type="place">Torino</name>
					<lb n="23" />
					Minutata da <persName><surname>Vinciguerra</surname></persName>
					<lb n="24" />
					Copiata da
				</ab>
				<ab type="paragrafo" n="5" xml:id="doc012_Body">
					<lb n="25" facs="#doc012_Body.00" />
					<name type="place">Roma</name><pc type="comma">,</pc> <date when="19401230">30.12-40</date>
					<lb n="26" facs="#doc012_Body.01" />
					In relazione alla nota
					<lb n="27" facs="#doc012_Body.02" />
					suindicata si comunica
					<lb n="28" facs="#doc012_Body.03" />
					che nulla-osta<pc type="comma">,</pc> da parte
					<lb n="29" facs="#doc012_Body.04" />
					di questo <orgName type="national">Ministero</orgName><pc type="comma">,</pc>					
					<lb n="30" facs="#doc012_Body.05" />
					<distinct type="archaic">acché</distinct> l<pc type="apostrophe">'</pc>internato in
					<lb n="31" facs="#doc012_Body.06" />
					oggetto sia ricoverato
					<lb n="32" facs="#doc012_Body.07" />
					nella clinica del
					<lb n="33" facs="#doc012_Body.08" />
					<choice n="1"><abbr type="title">Dott.</abbr><expan>dottore</expan></choice> <rs type="person">Calombrino</rs> a
					<lb n="34" facs="#doc012_Body.09" />
					<name type="place">Torino</name> <distinct type="archaic">ove</distinct> potrà trat-
					<lb n="35" facs="#doc012_Body.10" />
					tenersi solamente per
					<lb n="36" facs="#doc012_Body.11" />
					il tempo <add place="supralinear">strettamente</add> necessario alla
					<lb n="37" facs="#doc012_Body.12" />
					cura del male di cui
					<lb n="38" facs="#doc012_Body.13" />
					<choice n="2"><sic>e</sic><corr>è</corr></choice> affetto<pc type="dot">.</pc>
					<lb n="39" facs="#doc012_Body.14" />
					<add place="above"><unclear reason="illegible">Pregasi</unclear> pertanto munirlo di foglio di via obbligatorio per</add>
					<add place="above">la cui prefettura</add> <del rend="overstrike">La</del> <choice n="1"><abbr type="acronym">R.</abbr><expan>Regia</expan></choice> <del rend="overstrike">Prefettura di </del><name type="place">Torino</name>
					<lb n="40" facs="#doc012_Body.15" />
					è pregata di far esercitare
					<lb n="41" facs="#doc012_Body.16" />
					nei <distinct type="archaic">di lui</distinct> confronti l<pc type="apostrophe">'</pc>op-
					<lb n="42" facs="#doc012_Body.17" />
					portuna <unclear reason="illegible">vigilanza</unclear><pc type="dot">.</pc>
				</ab>
